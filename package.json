{
  "name": "be",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon src/main.js",
    "clean": "rimraf ./dist",
    "build": "npm run clean && babel src -d dist --copy-files",
    "test": "jest --config jest.config.json",
    "test:unit": "jest --config jest.config.json",
    "test:coverage": "jest --coverage --config jest.config.json",
    "db:re-index": "babel-node ./src/db-cli.js re-index",
    "db:seed": "babel-node ./src/db-cli.js seed",
    "db:migrate": "babel-node ./src/db-cli.js migrate",
    "dist:db:re-index": "node -r dotenv/config dist/db-cli re-index",
    "dist:db:seed": "node -r dotenv/config dist/db-cli seed",
    "dist:db:migrate": "node -r dotenv/config dist/db-cli migrate",
    "setup": "bash scripts/setup.sh",
    "docker:setup": "export $(cat .env); envsubst < ./docker/template.yml > ./docker/docker-compose.yml",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:image": "sh ./scripts/docker-image.sh",
    "env:hide": "sh ./scripts/env-hide.sh"
  },
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.5",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "express-handlebars": "^6.0.6",
    "express-handlebars-sections": "^1.0.1",
    "glob": "^8.0.3",
    "handlebars": "^4.7.7",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "i18n": "^0.15.0",
    "keymirror": "^0.1.1",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "node-cron": "^3.0.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.20.1",
    "winston": "^3.7.2",
    "xss-clean": "^0.1.1"
  }
}
